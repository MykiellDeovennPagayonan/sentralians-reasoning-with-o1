generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  system
  user
  assistant
}

model Chat {
  chatSessionId String    @id @default(auto()) @map("_id") @db.ObjectId
  chatName      String
  userId        String
  messages      Message[]

  @@map("chats")
}

model Message {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  role        Role
  content     Content[]
  messageType String?

  chat          Chat   @relation(fields: [chatSessionId], references: [chatSessionId])
  chatSessionId String @db.ObjectId

  @@map("messages")
}

model Content {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  contentType String
  text        String?

  message   Message @relation(fields: [messageId], references: [id])
  messageId String  @db.ObjectId

  @@map("contents")
}
